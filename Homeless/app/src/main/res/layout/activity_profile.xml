<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="646dp">

            <ListView
                android:id="@+id/paymentDivider"
                android:layout_width="325dp"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/paymentHeading" />

            <TextView
                android:id="@+id/settingsHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="settings"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/settingsImage"
                app:layout_constraintTop_toBottomOf="@+id/notificationHeading" />

            <TextView
                android:id="@+id/historyHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="history"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/historyImage"
                app:layout_constraintTop_toBottomOf="@+id/seedCount" />

            <ListView
                android:id="@+id/notificationDivider"
                android:layout_width="325dp"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notificationHeading" />

            <ImageView
                android:id="@+id/socialImage"
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/socialHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settingsImage"
                app:srcCompat="@drawable/social_clipart" />

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-light"
                android:text="Profile"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/paymentImage"
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/paymentHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/historyImage"
                app:srcCompat="@drawable/payment_clipart" />

            <ImageView
                android:id="@+id/settingsImage"
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/settingsHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notificationImage"
                app:srcCompat="@drawable/settings_clipart" />

            <TextView
                android:id="@+id/socialHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="social media"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/socialImage"
                app:layout_constraintTop_toBottomOf="@+id/settingsHeading" />

            <TextView
                android:id="@+id/notificationHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="notifications"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/notificationImage"
                app:layout_constraintTop_toBottomOf="@+id/paymentHeading" />

            <ListView
                android:id="@+id/socialDivider"
                android:layout_width="325dp"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/socialHeading" />

            <ListView
                android:id="@+id/historyDivider"
                android:layout_width="325dp"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/historyHeading" />

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="131dp"
                android:layout_height="144dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading"
                app:srcCompat="@drawable/profile_picture_clipart" />

            <ImageView
                android:id="@+id/notificationImage"
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/notificationHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/paymentImage"
                app:srcCompat="@drawable/notifications_clipart" />

            <TextView
                android:id="@+id/seedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-light"
                android:text="seeds"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/seedsImage"
                app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

            <ListView
                android:id="@+id/beansDivider"
                android:layout_width="325dp"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seedsImage" />

            <ImageView
                android:id="@+id/seedsImage"
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/seedCount"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/seeds_clipart" />

            <TextView
                android:id="@+id/paymentHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="payment methods"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/paymentImage"
                app:layout_constraintTop_toBottomOf="@+id/historyHeading" />

            <ImageView
                android:id="@+id/historyImage"
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/historyHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seedsImage"
                app:srcCompat="@drawable/history_clipart" />

            <ListView
                android:id="@+id/settingsDivider"
                android:layout_width="325dp"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settingsHeading" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="109dp"
                android:layout_marginLeft="109dp"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toStartOf="@+id/imageView5"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="109dp"
                android:layout_marginRight="109dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="154dp"
                android:layout_marginRight="154dp"
                android:src="@mipmap/releaf_launch"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/usericon"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/carticon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.404"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>